<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F131D">

    <!-- Search Header moved to Top -->
    <LinearLayout
        android:id="@+id/header_browse"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#151A24"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back_browse"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@android:drawable/ic_media_previous"
            app:tint="#FFFFFF" />

        <AutoCompleteTextView
            android:id="@+id/et_browse_query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Search anime or genre..."
            android:completionThreshold="1"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999" />

        <!-- Clear Filter Button -->
        <ImageView
            android:id="@+id/btn_clear_filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Clear Filter"
            android:padding="10dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#FF4444"
            android:visibility="gone"/>

        <!-- Filter Button -->
        <ImageView
            android:id="@+id/btn_filter_browse"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Filter"
            android:padding="10dp"
            android:src="@android:drawable/ic_menu_preferences"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Genre Filter List (Hidden by default, toggled by Filter button) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_genres"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/header_browse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Results Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_browse_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        app:layout_constraintTop_toBottomOf="@id/recycler_genres"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_no_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for your favorite anime"
        android:textColor="#66FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_browse" />

</androidx.constraintlayout.widget.ConstraintLayout>